<!Doctype html>
<html lang="is">

<head>
    <meta charset="utf-8" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="styles.css">
	<title>Lánamál</title>
	<script defer type="module" src="./js/loan.js"></script>
</head>

<body>
    <%~ include('header') %>
    <section class="graph-section max-width">
        <h1> Lánareiknivél </h1>
        <hr class="break-line">
        <div class="dashboard">
            <div class="main-stat">
                <div class="dashboard-subtitle">
                    <div class="icon-container">
                        <img class="icon white" src="./img/dollar.svg" />
                    </div>
                    <h3>Samtals borgað</h3>
                </div>
                <label class="currency" id="total-paid"> 100.000 </label>
            </div>
            <div class="alt-stat">
                <div class="dashboard-subtitle">
                    <div class="icon-container">
                        <img class="icon" src="./img/percent.svg" />
                    </div>
                    <h3>Borgað í vexti</h3>
                </div>
                <label class="currency" id="interest-paid"> 100.000 </label>
            </div>
            <div class="graph-container">
                <div class="dashboard-subtitle">
                    <img class="icon" src="" />
                </div>
                <canvas id="my-chart" width="100%" height="100%"></canvas>
            </div>
            <div class="settings">
                <div class="dashboard-subtitle">
                    <div class="icon-container">
                        <img class="icon" src="./img/settings.svg" />
                    </div>
                    <h3>Stillingar</h3>
                </div>
                <div class="settings-group">
                    <label for="principals-input" id="principal-label">Höfuðstóll</label>
                    <br>

                    <div class="input-group">
                        <input id="principal-input" type="number" value="600000" min="0" inputmode="numeric">
                        <p>kr.</p>
                    </div>
                </div>
                <div class="settings-group">
                    <label for="interest-input" id="interest-label">Vextir</label>
                    <br>
                    <div class="input-group">
                        <input id="interest-input" type="number" value="10" min="0" max="100" inputmode="numeric">
                        <p>%</p>
                    </div>
                </div>
                <div class="settings-group">
                    <label for="length-input" id="length-label">Lengd láns</label>
                    <br>
                    <div class="input-group">
                        <input id="length-input" type="number" value="25" min="1" max="40" step="1" inputmode="numeric">
                        <p>ár</p>
                    </div>
                </div>
            </div>
    </section>

    <hr class="break-line">

    <%~ include('footer') %>
</body>

</html>
